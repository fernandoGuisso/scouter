$dark = #2D3E50
$prime = #E8683E
$middle = #D6F8D6
$sec = #7FC6A4
$light = #FEFEFE

*
	padding 0
	margin 0 auto

html body
	margin 0 auto
	background-color $light
	color $prime
	font-family 'Open Sans', sans-serir
	text-align center
	font-size 3em
h1
	color $prime
h2
	color $sec
p.content
	color $dark
	margin 100px 0
table
	border none
	color $dark
	border-collapse collapse
	font-weight 900
td
	border 1px $dark solid
	padding 10px
	border-bottom none
.buy
	background-color red
	color white
.sel
	background-color green
	color white
	
	
.left
	border-left none
.right
	border-right none
.top
	border-top none
.bottom
	border-bottom none


footer
	background-color $dark
	padding 1.5em 0
	p
		color $light
		font-size 0.25em
		a
			color ($dark*3.5)
			text-decoration none
			
	svg.lg
		width 100px
		padding 0
		padding-top 3%